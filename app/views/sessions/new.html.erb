<div class="">
  <h1>ログイン</h1>
</div>

<div class="">

  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    
    <div class="form-set">
      <%= f.label :name, 'ユーザー名', class: "form-label" %>
      <%= f.text_field :name, class: 'form-field' %>
    </div>

    <div class="form-set">
      <%= f.label :password, 'パスワード', class: "form-label" %>
      <%= f.password_field :password, class: 'form-field' %>
    </div>

    <%= f.submit 'ログイン', class: 'form-btn' %>
  <% end %>

  <p>新規ユーザーですか? <%= link_to '入会', signup_path, class: '' %></p>
</div>