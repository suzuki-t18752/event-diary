<div class="back">
  <% if  @user.image? %>
    <%= image_tag @user.image.thumb.url, alt: @user.name + "のアイコン" %>
  <% else %>
    <%= content_tag :div, image_tag("アイコン.jpeg")%>
  <% end %>
  <%= @user.name %><%= render 'relationships/follow_button', user: @user %>
  <p><%= simple_format(@user.introduction, class: "longtext") %></p>
</div>
<div class="list back">
  <ul class="nav nav-tabs nav-justified">
    <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">投稿済み<span class="badge badge-secondary"><%= @count_articles %></span></a></li>
    <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">フォロー中<span class="badge badge-secondary"><%= @count_followings %></span></a></li>
    <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">フォロワー<span class="badge badge-secondary"><%= @count_followers %></span></a></li>
    <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>">お気に入り<span class="badge badge-secondary"><%= @count_likes %></span></a></li>
  </ul>
    <% @articles.each do |article| %>
      <div class="border-bottom">
        <h6><%= article.name %></h6>
        <div>
          <%= link_to "投稿者:" + article.user.name, user_path(article.user) %><br>
          作成日:<%= article.created_at.strftime("%Y年%m月%d日") %>
        </div>
        タグ:<% article.tag_list.each do |tag| %>
          <%=link_to tag, articles_path(tag_name: tag), class: "text-white badge badge-primary"%>
        <% end %><br>
        <%= link_to '閲覧', article, class: 'btn-gradient-3d-simple' %>
        <% if current_user == article.user %>
          <%= link_to '更新', edit_article_path(article), class: 'btn-gradient-3d-simple' %>
          <%= link_to '削除', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-gradient-3d-delete' %>
        <% end %>
        <% if article.favorited_by?(current_user) %>
            <%=link_to 'お気に入り解除', article_favorites_path(article.id), method: :delete, class: 'btn-gradient-3d-delete' %>
        <% else %>
            <%=link_to 'お気に入り', article_favorites_path(article.id), method: :post, class: 'btn-gradient-3d-simple' %>
        <% end %>
      </div>
    <% end %>
</div>


