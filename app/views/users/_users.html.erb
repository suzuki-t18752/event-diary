<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if  user.image? %>
          <%= image_tag user.image.thumb.url, alt: user.name + "のアイコン" %>
        <% else %>
          <%= content_tag :div, image_tag("アイコン.jpeg")%>
        <% end %>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'プロフィール', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>