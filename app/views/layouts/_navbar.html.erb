<header class="">
  <nav class="navbar navbar-expand-sm navbar-light">
      <% if logged_in? %>
      <a class="navbar-brand nav-btn" href="/articles">Event diary</a>
      <% else %>
      <a class="navbar-brand nav-btn" href="/">Event diary</a>
      <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if logged_in? %>
          <li class="nav-item"><%= link_to '新規投稿', new_article_path, class: 'nav-link nav-btn' %></li>
          <li class="nav-item"><%= link_to 'ユーザー一覧', users_path, class: 'nav-link nav-btn' %></li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle nav-btn" data-toggle="dropdown"><%= truncate(current_user.name, length:10) %></a>
