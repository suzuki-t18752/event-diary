            </ul>
          </li>
        <% else %>
          <li class="nav-item"><%= link_to "ユーザー作成", signup_path, class: 'nav-link nav-btn' %></li>
          <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link nav-btn' %></li>
        <% end %>
      </ul>
    </div>
